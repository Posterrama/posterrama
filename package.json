{
  "name": "posterrama-app",
  "version": "1.2.4",
  "description": "An elegant, web-based screensaver for Plex and Jellyfin media servers, named posterrama.app.",
  "main": "server.js",
  "scripts": {
    "start": "node validate-env.js && node server.js",
    "dev": "nodemon --ignore 'public/' --ignore 'node_modules/' server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "start:prod": "pm2 start ecosystem.config.js",
    "stop:prod": "pm2 stop ecosystem.config.js",
    "restart:prod": "pm2 restart ecosystem.config.js",
    "logs": "pm2 logs posterrama"
  },
  "keywords": [
    "plex",
    "jellyfin",
    "screensaver",
    "media-server",
    "posterrama"
  ],
  "author": "Mark Frelink",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@jellyfin/sdk": "^0.7.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "node-fetch": "^2.7.0",
    "plex-api": "^5.3.2",
    "puppeteer": "^22.12.1",
    "qrcode": "^1.5.3",
    "session-file-store": "^1.5.0",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "pm2": "^5.4.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0"
  }
}
