{
    "name": "posterrama-app",
    "version": "1.8.8",
    "private": true,
    "description": "An elegant, full-screen screensaver that acts as a digital art frame for your media.",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "https://github.com/Posterrama/posterrama.git"
    },
    "bugs": {
        "url": "https://github.com/Posterrama/posterrama/issues"
    },
    "homepage": "https://posterrama.app",
    "author": "Posterrama Team",
    "keywords": [
        "screensaver",
        "digital-frame",
        "plex",
        "jellyfin",
        "express",
        "node",
        "posterrama"
    ],
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "deps:check": "npm outdated",
        "deps:update": "npm update",
        "deps:audit": "npm audit",
        "deps:security-audit": "./scripts/security-audit-filtered.sh",
        "deps:security-daily": "./scripts/security-audit-filtered.sh",
        "deps:security-full": "npm audit --audit-level=high",
        "deps:health": "node scripts/dependency-health.js",
        "review:self-check": "node scripts/review-self-check.js",
        "review:pre-check": "./scripts/simple-review-check.sh",
        "health": "./scripts/health-check.sh",
        "quality:all": "npm run lint && npm run format:check && npm test && npm run deps:security-audit"
    },
    "dependencies": {
        "@jellyfin/sdk": "^0.11.0",
        "adm-zip": "^0.5.16",
        "ajv": "^8.17.1",
        "axios": "^1.7.7",
        "bcrypt": "^5.1.1",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dompurify": "^3.2.6",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.5.1",
        "express-session": "^1.18.0",
        "express-validator": "^7.2.1",
        "helmet": "^8.1.0",
        "joi": "^17.13.3",
        "jsdom": "^26.1.0",
        "node-fetch": "^2.7.0",
        "plex-api": "^5.3.2",
        "qrcode": "^1.5.4",
        "semver": "^7.7.2",
        "session-file-store": "^1.5.0",
        "speakeasy": "^2.0.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "validator": "^13.15.15",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "audit-ci": "^7.1.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.6.2",
        "supertest": "^7.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
