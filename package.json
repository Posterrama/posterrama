{
  "name": "posterrama-app",
  "version": "1.3.0",
  "description": "An elegant, full-screen screensaver that acts as a digital art frame for your media.",
  "main": "server.js",
  "scripts": {
    "start": "node validate-env.js && node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:coverage:html": "jest --coverage && open coverage/lcov-report/index.html",
    "test:coverage:report": "./scripts/coverage-report.sh",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "lint": "echo 'Linting not yet configured - install ESLint to enable'"
  },
  "dependencies": {
    "@jellyfin/sdk": "^0.7.0",
    "bcrypt": "^5.1.1",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "joi": "^17.13.3",
    "jsdom": "^26.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "plex-api": "^5.3.2",
    "qrcode": "^1.5.3",
    "session-file-store": "^1.5.0",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "audit-ci": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "pm2": "^5.4.0",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "GPL-3.0-or-later"
}
