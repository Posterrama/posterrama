{
    "name": "posterrama-app",
    "version": "2.9.4",
    "private": true,
    "description": "An elegant, full-screen screensaver that acts as a digital art frame for your media.",
    "license": "GPL-3.0-or-later",
    "repository": {
        "type": "git",
        "url": "https://github.com/Posterrama/posterrama.git"
    },
    "bugs": {
        "url": "https://github.com/Posterrama/posterrama/issues"
    },
    "homepage": "https://posterrama.app",
    "author": "Posterrama Team",
    "keywords": [
        "screensaver",
        "digital-frame",
        "plex",
        "jellyfin",
        "express",
        "node",
        "posterrama"
    ],
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "test": "jest",
        "test:frontend": "vitest run",
        "test:frontend:watch": "vitest",
        "test:frontend:ui": "vitest --ui",
        "test:frontend:coverage": "vitest run --coverage",
        "test:all": "npm run test && npm run test:frontend",
        "test:stress": "bash -c 'for i in {1..5}; do echo Run $i; npx jest --runInBand || exit 1; done'",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:regression": "jest __tests__/regression --verbose --no-coverage",
        "test:regression:contracts": "jest __tests__/regression/api-contract-validation.test.js --verbose",
        "test:regression:e2e": "jest __tests__/regression/critical-path.e2e.test.js --verbose --runInBand",
        "test:regression:config": "jest __tests__/regression/config-migration.test.js --verbose",
        "test:regression:external": "jest __tests__/regression/external-services.test.js --verbose",
        "test:quick-regression": "npm run test:regression:contracts && npm run health",
        "test:full-regression": "npm run test:regression:contracts && npm run test:regression:config && npm run test:regression:external",
        "test:pre-deployment": "./scripts/pre-deployment-regression.sh",
        "test:cleanup": "./scripts/cleanup-test-artifacts.sh",
        "coverage:table": "node scripts/generate-coverage-table.js",
        "badges:update": "node scripts/update-badges.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "deps:check": "npm outdated",
        "deps:update": "npm update",
        "deps:audit": "npm audit",
        "deps:security-audit": "./scripts/security-audit-filtered.sh",
        "deps:security-daily": "./scripts/security-audit-filtered.sh",
        "deps:security-full": "npm audit --audit-level=high",
        "deps:health": "node scripts/dependency-health.js",
        "deps:advice": "bash scripts/deps-advice.sh",
        "deps:unused": "node scripts/deps-unused.js",
        "review:self-check": "node scripts/review-self-check.js",
        "review:pre-check": "./scripts/simple-review-check.sh",
        "health": "./scripts/health-check.sh",
        "health:quick": "./scripts/health-check-quick.sh",
        "icons:generate": "node scripts/generate-icons.js",
        "config:validate": "node scripts/validate-config.js",
        "config:validate:example": "node scripts/validate-config-example.js",
        "quality:all": "npm run lint && npm run format:check && npm run test:hygiene && npm run config:validate:example && npm test && npm run openapi:sync && npm run openapi:validate && npm run deps:unused && npm run deps:security-audit",
        "test:hygiene": "node scripts/check-tests-clean.js && node scripts/verify-swagger-docs.js",
        "hooks:setup": "bash scripts/setup-git-hooks.sh",
        "push": "bash private/release-push.sh --no-tag --yes",
        "push:force": "bash private/release-push.sh --no-tag --yes --force",
        "release:check": "./scripts/release-check.sh",
        "release:check:fast": "./scripts/release-check.sh --skip-slow-tests",
        "release:patch": "npm run release:check && bash private/release-push.sh --patch --yes",
        "release:minor": "npm run release:check && bash private/release-push.sh --minor --yes",
        "release:major": "npm run release-check && bash private/release-push.sh --major --yes",
        "openapi:export": "node scripts/export-openapi.js",
        "openapi:validate": "node scripts/validate-openapi.js",
        "openapi:sync": "npm run openapi:export",
        "release:summary": "node scripts/generate-release-summary.js",
        "perf:audit": "./scripts/performance-audit.sh",
        "perf:bundle-size": "npm run build && du -sh dist/public/ public/ && du -h dist/public/ | tail -1",
        "perf:largest-files": "find public -name '*.js' -o -name '*.css' -o -name '*.html' | xargs ls -lh | sort -k5 -h -r | head -20",
        "perf:memory": "node scripts/test-memory.js"
    },
    "dependencies": {
        "@ctrl/plex": "^3.11.0",
        "adm-zip": "^0.5.16",
        "ajv": "^8.17.1",
        "axios": "^1.13.2",
        "bcrypt": "^5.1.1",
        "chokidar": "^4.0.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dompurify": "^3.3.0",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-rate-limit": "^7.5.1",
        "express-session": "^1.18.0",
        "express-validator": "^7.3.0",
        "file-type": "^16.5.4",
        "fs-extra": "^11.2.0",
        "helmet": "^8.1.0",
        "ipaddr.js": "^2.1.0",
        "joi": "^17.13.3",
        "jszip": "^3.10.1",
        "lru-cache": "^11.2.2",
        "mime-types": "^3.0.1",
        "mqtt": "^5.14.1",
        "multer": "^2.0.2",
        "node-fetch": "^2.7.0",
        "prom-client": "^15.1.3",
        "proper-lockfile": "^4.1.2",
        "qrcode": "^1.5.4",
        "semver": "^7.7.3",
        "session-file-store": "^1.5.0",
        "sharp": "^0.33.4",
        "speakeasy": "^2.0.0",
        "swagger-jsdoc": "^6.2.8",
        "validator": "^13.15.23",
        "winston": "^3.18.3",
        "winston-daily-rotate-file": "^5.0.0",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@jellyfin/sdk": "^0.11.0",
        "@testing-library/dom": "^10.4.1",
        "@testing-library/user-event": "^14.6.1",
        "@vitest/coverage-v8": "^4.0.9",
        "@vitest/ui": "^4.0.9",
        "ajv-formats": "^3.0.1",
        "audit-ci": "^7.1.0",
        "csso-cli": "^4.0.2",
        "depcheck": "^1.4.7",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "glob": "^11.0.3",
        "happy-dom": "^20.0.10",
        "jest": "^29.7.0",
        "jsdom": "^24.1.3",
        "lighthouse": "^12.8.2",
        "nock": "^13.5.6",
        "prettier": "^3.6.2",
        "puppeteer": "^24.30.0",
        "supertest": "^7.0.0",
        "terser": "^5.44.1",
        "vite": "^7.2.2",
        "vitest": "^4.0.9"
    },
    "overrides": {
        "js-yaml": "^4.1.1"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
