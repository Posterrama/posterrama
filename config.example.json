{
    "transitionIntervalSeconds": 10,
    "backgroundRefreshMinutes": 60,
    "showClearLogo": true,
    "showRottenTomatoes": true,
    "rottenTomatoesMinimumScore": 0,
    "showPoster": true,
    "showMetadata": true,
    "clockWidget": true,
    "clockTimezone": "auto",
    "clockFormat": "24h",
    "wallartMode": {
        "enabled": false,
        "density": "high",
        "refreshRate": 4,
        "randomness": 2,
        "animationType": "flip",
        "layoutVariant": "heroGrid",
        "ambientGradient": true,
        "layoutSettings": {
            "heroGrid": {
                "heroSide": "right",
                "heroRotationMinutes": 8,
                "biasAmbientToHero": true
            }
        }
    },
    "cinemaMode": false,
    "cinemaOrientation": "portrait-flipped",
    "cinema": {
        "header": {
            "enabled": true,
            "text": "Super Cool",
            "style": "classic"
        },
        "footer": {
            "enabled": true,
            "type": "specs",
            "marqueeText": "Feature Presentation",
            "marqueeStyle": "classic",
            "specs": {
                "showResolution": true,
                "showAudio": true,
                "showAspectRatio": true,
                "showFlags": true,
                "style": "outline",
                "iconSet": "filled"
            }
        },
        "ambilight": {
            "enabled": true,
            "strength": 60
        },
        "rotationIntervalMinutes": 0,
        "presets": {
            "headerTexts": [
                "Coming Soon",
                "Now Playing",
                "Home Cinema",
                "Feature Presentation",
                "Super Cool"
            ],
            "footerTexts": ["Coming Soon", "Now Playing", "Home Cinema", "Feature Presentation"]
        }
    },
    "transitionEffect": "kenburns",
    "effectPauseTime": 3,
    "uiScaling": {
        "global": 100,
        "content": 100,
        "clearlogo": 100,
        "clock": 100
    },
    "mediaServers": [
        {
            "name": "Plex Server",
            "type": "plex",
            "enabled": true,
            "hostname": "your-server-address",
            "port": 32400,
            "tokenEnvVar": "PLEX_TOKEN",
            "movieLibraryNames": ["Certified Fresh"],
            "showLibraryNames": [],
            "recentlyAddedOnly": false,
            "recentlyAddedDays": 30,
            "ratingFilter": [],
            "genreFilter": "",
            "qualityFilter": "",
            "libraries": ["Certified Fresh"]
        },
        {
            "name": "Jellyfin Server",
            "type": "jellyfin",
            "enabled": false,
            "hostname": "your-server-address",
            "port": 443,
            "tokenEnvVar": "JELLYFIN_API_KEY",
            "movieLibraryNames": [],
            "showLibraryNames": [],
            "recentlyAddedOnly": false,
            "recentlyAddedDays": 30,
            "ratingFilter": [],
            "genreFilter": "",
            "qualityFilter": "",
            "ratingFilters": {
                "minCommunityRating": 0,
                "allowedOfficialRatings": [],
                "minUserRating": 0
            }
        }
    ],
    "tmdbSource": {
        "enabled": false,
        "category": "popular",
        "minRating": 8,
        "apiKey": "your-api-key-here",
        "genreFilter": ""
    },
    "streamingSources": [],
    "siteServer": {
        "enabled": true,
        "port": 4001
    },
    "deviceMgmt": {
        "enabled": true,
        "bypass": {
            "ipAllowList": ["127.0.0.1", "10.255.0.0/16"]
        }
    },
    "cache": {
        "maxSizeGB": 2
    },
    "serverName": "Your Server Name",
    "baseUrl": "your-server-address",
    "port": 4000,
    "syncEnabled": true,
    "syncAlignMaxDelayMs": 1200,
    "serverPort": 4000,
    "plexClientOptions": {},
    "backups": {
        "enabled": true,
        "time": "03:30",
        "retention": 5
    },
    "testKeyConfig": "fromConfig",
    "someInt": 42,
    "localDirectory": {
        "enabled": true,
        "rootPath": "media",
        "watchDirectories": []
    },
    "rootRoute": {
        "behavior": "landing",
        "defaultMode": "screensaver",
        "statusCode": 302,
        "bypassParam": "landing"
    },
    "previewOrientation": "landscape",
    "mqtt": {
        "enabled": true,
        "broker": {
            "host": "your-server-address",
            "port": 1883,
            "username": "mqtt",
            "passwordEnvVar": "MQTT_PASSWORD"
        },
        "externalUrl": "your-server-address",
        "discovery": {
            "enabled": true
        },
        "availability": {
            "enabled": true,
            "timeout": 60
        }
    }
}
